@using OdeToFood.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.CuisineType</span>
    </div>
    <div class="panel-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id"><em class="glyphicon glyphicon-zoom-in"></em></a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id"><em class="glyphicon glyphicon-edit"></em></a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id"><em class="glyphicon glyphicon-trash"></em></a>
    </div>
</div>

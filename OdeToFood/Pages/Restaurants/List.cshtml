@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restanrants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-info">Search</button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.CuisineType</td>
        <td>
            <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@restaurant.id">Detail</a>
        </td>
        <td>
            <a class="btn btn-primary" asp-page="./Edit" asp-route-restaurantId="@restaurant.id">Edit</a>
        </td>
    </tr>
    }
</table>

<a class="btn btn-primary" asp-page="./Edit">Add New</a>

<div>@Model.Message</div>